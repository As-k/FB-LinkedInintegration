<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.cioc.fbintegration.LinkedinActivity">

    <TextView
        android:id="@+id/linkedtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the button to ligin"
        android:textSize="20dp"
        android:onClick="login"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_below="@+id/linkedtext"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/linkedin_button"
        android:onClick="login"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:background="@color/bg_color"
        android:layout_marginBottom="15dp"
        android:text="Continue with Linkedin"/>
</RelativeLayout>